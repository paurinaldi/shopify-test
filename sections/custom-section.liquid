{{ 'custom-section.css' | asset_url | stylesheet_tag }}

<div class="custom-section page-width padding-x-{{ section.settings.padding_x }} padding-y-{{ section.settings.padding_y }}">
  <div class="custom-section__content">
    <div class="custom-section__text-wrapper">
      <div class="custom-section__text">
        <h2 class="{{ section.settings.heading_size | default: 'h1' }}">
          {{ section.settings.title | escape }}
        </h2>
        <p>{{ section.settings.description }}</p>
      </div>
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'button' -%}
            <div class="custom-section__button" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.button_link }}" class="button button--primary"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %}>
                {{ block.settings.button_label | escape }}
              </a>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    <div class="custom-section__image">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 300 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="custom-section__image-element"
        >
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg custom-section__image-element' }}
      {%- endif %}
    </div>
  </div>
</div>

<style>
  {% assign max_padding = 100 %}
  {% for i in (0..max_padding) %}
    {% assign multiple_of_four = i | times: 4 %}
    {% if multiple_of_four <= max_padding %}
      .padding-x-{{ multiple_of_four }} {
        padding-left: {{ multiple_of_four }}px;
        padding-right: {{ multiple_of_four }}px;
      }
      .padding-y-{{ multiple_of_four }} {
        padding-top: {{ multiple_of_four }}px;
        padding-bottom: {{ multiple_of_four }}px;
      }
    {% endif %}
  {% endfor %}
</style>

{% schema %}
{
  "name": "Sección Personalizada",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Título de la sección"
    },
    {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "Tamaño del título"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Descripción",
      "default": "Descripcion de sección personalizada"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "range",
      "id": "padding_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding horizontal",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_y",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding vertical",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Sección Personalizada",
      "category": "Custom"
    }
  ]
}
{% endschema %}
